{
  "include": ["**/src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es5",
    "rootDir": "src/",
    "lib": ["es2015"],
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  }
}
